#!/bin/sh

# Exit on any command failure
set -e

echo "Running pre-commit checks..."

# Check formatting (without auto-fixing)
echo "🎨 Checking code formatting..."
npm run format:check

# Run linting
echo "🔍 Running linter..."
npm run lint

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ All pre-commit checks passed!"
